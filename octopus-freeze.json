        {
            "name": "configure server integration",
            "src": "",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "npm run set-up-acdc-integration -- --port=8080 --domainName=epi-auth-template --epi=http://192.168.1.89:8080 --env=dev"
